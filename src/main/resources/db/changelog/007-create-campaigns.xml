<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-campaigns" author="numa-team">
        <createTable tableName="campaigns">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="restaurant_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_campaigns_restaurant" references="restaurants(id)"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="campaign_type" type="VARCHAR(20)" defaultValue="UPSELL">
                <constraints nullable="false"/>
            </column>
            <column name="trigger_type" type="VARCHAR(20)" defaultValue="ORDER_VALUE">
                <constraints nullable="false"/>
            </column>
            <column name="trigger_conditions" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="discount_type" type="VARCHAR(20)" defaultValue="PERCENTAGE">
                <constraints nullable="false"/>
            </column>
            <column name="discount_value" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="max_discount_amount" type="DECIMAL(10,2)"/>
            <column name="minimum_order_value" type="DECIMAL(10,2)"/>
            <column name="applicable_items" type="JSONB"/>
            <column name="priority" type="INTEGER" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATE"/>
            <column name="start_time" type="TIME"/>
            <column name="end_time" type="TIME"/>
            <column name="applicable_days" type="VARCHAR(20)" defaultValue="ALL">
                <constraints nullable="false"/>
            </column>
            <column name="usage_limit_per_customer" type="INTEGER"/>
            <column name="total_usage_limit" type="INTEGER"/>
            <column name="current_usage_count" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="campaigns" indexName="idx_campaigns_restaurant_id">
            <column name="restaurant_id"/>
        </createIndex>
        
        <createIndex tableName="campaigns" indexName="idx_campaigns_active">
            <column name="is_active"/>
        </createIndex>
        
        <createIndex tableName="campaigns" indexName="idx_campaigns_dates">
            <column name="start_date"/>
            <column name="end_date"/>
        </createIndex>
    </changeSet>

    <changeSet id="007-create-campaign-usage" author="numa-team">
        <createTable tableName="campaign_usage">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="campaign_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_campaign_usage_campaign" references="campaigns(id)"/>
            </column>
            <column name="order_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_campaign_usage_order" references="orders(id)"/>
            </column>
            <column name="session_id" type="UUID">
                <constraints foreignKeyName="fk_campaign_usage_session" references="dining_sessions(id)"/>
            </column>
            <column name="customer_identifier" type="VARCHAR(255)"/>
            <column name="discount_applied" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="original_amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="final_amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="applied_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="campaign_usage" indexName="idx_campaign_usage_campaign_id">
            <column name="campaign_id"/>
        </createIndex>
        
        <createIndex tableName="campaign_usage" indexName="idx_campaign_usage_order_id">
            <column name="order_id"/>
        </createIndex>
        
        <createIndex tableName="campaign_usage" indexName="idx_campaign_usage_customer">
            <column name="customer_identifier"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
