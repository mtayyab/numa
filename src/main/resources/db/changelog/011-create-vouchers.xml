<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="011-create-vouchers" author="numa-team">
        <createTable tableName="vouchers">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="discount_value" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="minimum_order_amount" type="DECIMAL(10,2)"/>
            <column name="maximum_discount_amount" type="DECIMAL(10,2)"/>
            <column name="expires_at" type="TIMESTAMP"/>
            <column name="usage_limit" type="INTEGER"/>
            <column name="used_count" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
            <column name="restaurant_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_vouchers_restaurant" references="restaurants(id)"/>
            </column>
            <column name="created_by" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_vouchers_user" references="users(id)"/>
            </column>
            <column name="is_public" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="valid_from" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add indexes for better performance -->
        <createIndex tableName="vouchers" indexName="idx_vouchers_restaurant_id">
            <column name="restaurant_id"/>
        </createIndex>

        <createIndex tableName="vouchers" indexName="idx_vouchers_code">
            <column name="code"/>
        </createIndex>

        <createIndex tableName="vouchers" indexName="idx_vouchers_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="vouchers" indexName="idx_vouchers_expires_at">
            <column name="expires_at"/>
        </createIndex>

        <createIndex tableName="vouchers" indexName="idx_vouchers_created_by">
            <column name="created_by"/>
        </createIndex>

        <!-- Add check constraints -->
        <sql>
            ALTER TABLE vouchers ADD CONSTRAINT chk_vouchers_discount_value_positive 
            CHECK (discount_value > 0);
        </sql>

        <sql>
            ALTER TABLE vouchers ADD CONSTRAINT chk_vouchers_used_count_non_negative 
            CHECK (used_count >= 0);
        </sql>

        <sql>
            ALTER TABLE vouchers ADD CONSTRAINT chk_vouchers_usage_limit_positive 
            CHECK (usage_limit IS NULL OR usage_limit > 0);
        </sql>

        <sql>
            ALTER TABLE vouchers ADD CONSTRAINT chk_vouchers_percentage_discount 
            CHECK (type != 'PERCENTAGE' OR discount_value <= 100);
        </sql>
    </changeSet>

</databaseChangeLog>
